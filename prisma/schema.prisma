generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Products { 
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  validate String
  amount String
  price String
  created_at DateTime? @default(now())

 @@map("products") 
}
model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  password String
  createdAt DateTime @default(now())
}